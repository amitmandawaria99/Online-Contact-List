<title>
  <%= title %>
</title>
<h4>Update Contact <%=user._id %>
    <%= user.name%>
      <%= user.phone%>
</h4>
<form action="/users/update-contact/?id=<%=user._id%>" method="POST">
  <input type="text" name="name" value="<%= user.name %>" class="form-input" required>
  <input type="number" name="phone" value="<%= user.phone %>" class="form-input" required>
  <input type="hidden" name="id" value="<%= user._id %>">
  <button type="submit" class="update-button">Update</button>
</form>